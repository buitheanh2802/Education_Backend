{
    "compilerOptions": {
        "module": "commonJS",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "assets/*" : ["./src/assets/*"],
            "middlewares/*" : ["./src/middlewares/*"],
            "routes/*" : ["./src/routes/*"],
            "models/*" : ["./src/models/*"],
            "constants/*" : ["./src/constants/*"],
            "controllers/*" : ["./src/controllers/*"],
            "services/*" : ["./src/services/*"],
            "helpers/*" : ["./src/helpers/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}